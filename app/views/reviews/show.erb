 <h3>Comment for <a href="/movies/<%= @movie.slug%>">  <%= @movie.title %> </a> </h3> 
 
 

<p>Critic: <%= @critic.username %></p>
<p>Comment: <%= @review.review_content %></p>
<p>Rating: <%= @review.star_rating %></p>
<br>
<br>

  
<form method="post" action="/reviews/<%=@review.id%>"  >
<input id="hidden" type="hidden" name="_method" value="delete">


<!-- hide edit and delete buttons if review does not belong to current user -->
<% if @critic.id == @user.id %>

<div class="container">
<div class="row">
   <div class="col text-center">

   <a href="/reviews/<%=@review.id%>/edit"><button type="button" class="btn btn-success btn-lg"><i class="fas fa-user-edit"></i> Edit</button></a>

   <button type="submit" class="btn btn-success btn-lg"><i class="fas fa-trash-alt"></i> Delete</button></a>

   <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-share-alt"></i> Share</button></a>

   <button type="submit" class="btn btn-success btn-lg"><i class="fa fa-thumbs-up"></i> Like</button></a>

   <button type="submit" class="btn btn-danger btn-lg"><i class="fa fa-thumbs-down"></i> Dislike</button></a>
     </div>
</div>
</div>

<% end %>


</form>

